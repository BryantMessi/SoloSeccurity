<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_gradient">

    <RelativeLayout
        android:id="@+id/common_clean_finish_success_rlyt"
       android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <ImageView
            android:id="@+id/common_clean_finish_shield_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/homepage_scan_finish_shield" />

        <ImageView
            android:id="@+id/common_clean_finish_ok_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/homepage_scan_finish_ok"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/homepage_scan_buddle_outer_white_edge" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/common_clean_finish_success_rlyt"
        android:id="@+id/common_clean_finish_success_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/common_background"
        android:text="安全"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/common_clean_finish_success_safe"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的设备良好"
        android:textSize="14sp"
        android:textColor="@color/common_background"/>
    <com.solo.security.common.view.CommonCircleRippleView
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="300dp"/>
</RelativeLayout>
