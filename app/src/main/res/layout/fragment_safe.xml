<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_gradient"
    android:orientation="vertical"
    tools:context="com.solo.security.safe.SafeFragment">

    <!-- <include layout="@layout/common_bar_layout" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.solo.security.safe.view.SafeProgressView
            android:id="@+id/safe_progress_vew"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp" />

        <TextView
            android:id="@+id/safe_progress_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@color/common_background"
            android:textSize="52sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前进度"
            android:textColor="@color/common_background"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="51.7dp"
            android:text="应用扫描中"
            android:textColor="@color/common_background"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:background="@color/boost_circle_progress_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="26dp">

            <ImageView
                android:id="@+id/safe_scan_app_one_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/icon1" />

            <ImageView
                android:id="@+id/safe_scan_app_two_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:background="@mipmap/icon2" />

            <ImageView
                android:id="@+id/safe_scan_app_three_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:background="@mipmap/icon3" />

            <ImageView
                android:id="@+id/safe_scan_app_four_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:background="@mipmap/icon4" />

            <ImageView
                android:id="@+id/safe_scan_app_five_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="16dp"
                android:background="@mipmap/icon5" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
